{
	"manifest_version": 3,
	"name": "AI Autocomplete",
	"version": "1.0",
	"description": "Autocomplete input fields using AI models",
	"permissions": ["activeTab", "scripting", "storage"],
	"host_permissions": ["<all_urls>"],
	"action": {
		"default_popup": "popup.html"
	},
	"options_page": "options.html",
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	],
	"background": {
		"service_worker": "background.js"
	},
	"commands": {
		"_execute_action": {
			"suggested_key": {
				"default": "Ctrl+K",
				"mac": "Command+K"
			},
			"description": "Activate AI Autocomplete"
		}
	}
}
